{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./types/index"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/functions",
    "__tests__",
    "e2e",
    "jest.config.js",
    "babel.config.js",
    "metro.config.js"
  ]
}
